{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Storm",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#comments"
		},
		{
			"include": "#entities"
		},
		{
			"include": "#punctuation"
		},
		{
			"include": "#constants"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.storm",
					"match": "\\b(if|while|for|return)\\b"
				},
				{
					"name": "keyword.storm",
					"match": "\\b(func)\\b"
				},
				{
					"name": "keyword.operator",
					"match": "="
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.storm",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.storm",
					"match": "\\\\."
				}
			]
		},
		"punctuation": {
			"patterns": [
				{
					"name": "punctuation.terminator.line.storm",
					"match": ";"
				},
				{
					"name": "punctuation.definition.brackets.storm",
					"match": "\\(|\\)|{|}|[|]"
				},
				{
					"name": "punctuation.separater.comma.storm",
					"match": ","
				}
			]
		},
		"constants": {
			"patterns": [
				{
					"name": "constant.numeric",
					"match": "\\d+"
				}
			]
		},
		"entities": {
			"patterns": [
				{
					"name": "entity.name.function.storm",
					"match": "((?<=func)\\w+(?=\\(|.+\\())|(\\w+(?=\\(|.+\\())"
				},
				{
					"name": "variable.name",
					"match": "\\w+(?=.=)"
				},
				{
					"name": "variable.parameter.storm",
					"match": "\\w+(?=(\\))|,)"
				}
			]
		},
		"comments": {
			"patterns": [
				{
					"name": "comment.line.double-slash.storm",
					"match": "\/\/.*"
				}
			]
		}
	},
	"scopeName": "source.storm"
}